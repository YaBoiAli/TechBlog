<div>
  <div>
    <h2>{{post.title}}</h2>
  </div>
  <div>
    Posted by
    {{post.User.username}}
    on
    {{format_date post.createdAt}}
  </div>

  {{#if post.Comments}}
    <div>
      <h3>Comments</h3>

      <div>
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              {{User.username}},
              {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </div>
  {{/if}}

  <form>
    <div>
      <h3>Add New Comment</h3>
    </div>
    <div>
      <input type="hidden" type="text" value={{post.id}} />
      <label for="comment-body">Comment</label>
      <textarea type="text" name="comment-body"></textarea>
      <button>Submit Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>